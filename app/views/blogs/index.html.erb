<% content_for :title, "Blogs" %>

<% if notice.present? %>
  <p class="py-2 px-3 bg-primary-50 mb-5 text-primary-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
<% end %>

<%= render Website::SectionComponent.new() do %>
  <div class="flex justify-center items-center">
    <h1 class="font-bold text-4xl">Blogs</h1>
  </div>
<% end %>
  
<%= render Website::SectionComponent.new(variant: :fill) do %>
    <div id="blogs" class="min-w-full divide-y divide-primary-200 space-y-5">
      <% if @blogs.any? %>
        <% @blogs.each do |blog| %>
          <div class="flex flex-col sm:flex-row justify-between items-center pb-5 sm:pb-0">
            <%= render blog %>
            <div class="w-full sm:w-auto flex flex-col sm:flex-row space-x-2 space-y-2">
              <%= link_to "Show", blog, class: "w-full sm:w-auto  rounded-md px-3.5 py-2.5 bg-primary-100 hover:bg-primary-50 inline-block font-medium" %>
              <%= link_to "Edit", edit_blog_path(blog), class: "w-full sm:w-auto  rounded-md px-3.5 py-2.5 bg-primary-100 hover:bg-primary-50 inline-block font-medium" %>
              <%= button_to "Destroy", blog, method: :delete, class: "w-full sm:w-auto rounded-md px-3.5 py-2.5  bg-prmimary-600 hover:bg-red-500 font-medium cursor-pointer", data: { turbo_confirm: "Are you sure?" } %>
            </div>
          </div>
        <% end %>
      <% else %>
        <p class=" my-10">No blogs found.</p>
      <% end %>
    </div>
  </div>
<% end %>
