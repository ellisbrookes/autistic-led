<footer class="border-t-2 border-white text-primary-900  bg-primary-800 px-4 py-12 flex flex-col justify-center items-center">
  <div class="grid grid-cols-1 gap-8 md:grid-cols-4">
    <!-- Company Info -->
    <div class="col-span-1 md:col-span-2">
      <div class="flex items-center space-x-4 mb-4">
        <div class="flex h-16 w-16 items-center justify-center">
          <%= image_tag "nav-logo.png", alt: "Autistic Led Logo", class: "h-16 w-16 object-contain" %>
        </div>

        <span class="text-3xl font-bold">Autistic Led</span>
      </div>

      <p class="mb-4 max-w-md">
        The journey may vary but it is always Autistic Led.
      </p>

      <div class="flex space-x-4">
        <!-- Social Links -->
        <a href="https://www.facebook.com/AutisticLedSouthHolland" target="_blank" rel="noopener noreferrer" class="text-gray-400 hover:text-gray-500 dark:hover:text-gray-300">
          <span class="sr-only">Facebook</span>
          <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
            <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
          </svg>
        </a>
      </div>
    </div>

    <!-- Company Links -->
    <div>
      <h3 class="text-sm font-bold uppercase">Company</h3>

      <ul class="mt-4 space-y-3">
        <li><%= render(Website::LinkComponent.new(text: "About", path: "#", variant: :small)) %></li>
        <li><%= render(Website::LinkComponent.new(text: "Blog", path: "#", variant: :small)) %></li>
        <li><%= render(Website::LinkComponent.new(text: "Contact", path: "#", variant: :small)) %></li>
      </ul>
    </div>
  </div>

  <!-- Bottom section -->
  <div class="w-full flex flex-col md:flex-row justify-center space-y-4 gap-2 pt-4">
    <p>&copy; <%= Time.current.year %> Austistic Led. All rights reserved.</p>

    <div class="flex space-x-6">
      <%= render(Website::LinkComponent.new(text: "Privacy Policy", path: "#", variant: :small)) %>
      <%= render(Website::LinkComponent.new(text: "Terms of Service", path: "#", variant: :small)) %>
    </div>
  </div>
</footer>
